<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:calendarview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_calendar"
    style="@style/MatchMatch"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/dimen189"
        android:layout_height="@dimen/dimen48"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_todayTask"
            style="@style/AutoMatch" />

        <TextView
            android:id="@+id/tv_completeMission"
            style="@style/AutoMatch" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen43"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_today"
            style="@style/AutoMatch"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_arrowLeft"
            android:layout_width="@dimen/dimen40"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="@dimen/dimen86"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_arrowRight"
            android:layout_width="@dimen/dimen40"
            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/tv_calendar"
            style="@style/AutoMatch" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_title"
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/dimen5"
        android:background="@color/mainColor"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen5"
        android:paddingTop="@dimen/dimen5"
        android:text="2017-12-12"
        android:textColor="@color/titletextcolors"
        android:textSize="@dimen/textsize15" />

    <TextView style="@style/DividerWidth" />

    <com.othershe.calendarview.weiget.WeekView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ffffff" />

    <com.othershe.calendarview.weiget.CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen230"
        android:background="#ffffff"
        calendarview:choose_type="single"
        calendarview:show_holiday="true"
        calendarview:show_lunar="false"
        calendarview:show_term="true"
        calendarview:switch_choose="false" />


    <TextView
        android:id="@+id/tv_transparent"
        style="@style/MatchAuto"
        android:background="@color/transparent_1" />

</LinearLayout>



