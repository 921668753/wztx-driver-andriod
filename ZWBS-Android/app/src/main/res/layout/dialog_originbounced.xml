<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:layout_marginTop="@dimen/dimen95"
    android:background="@color/transparent_1"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dimen100">

    <ListView
        android:id="@+id/lv_province"
        style="@style/AutoMatch"
        android:layout_weight="1"
        android:background="@color/f5F5F5colors"
        android:divider="@color/transparent"
        android:dividerHeight="@dimen/dimen0"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:listitem="@layout/item_province" />

    <ListView
        android:id="@+id/lv_city"
        style="@style/AutoMatch"
        android:background="@color/mainColor"
        android:divider="@color/transparent"
        android:dividerHeight="@dimen/dimen0"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:listitem="@layout/item_city" />

    <ListView
        android:id="@+id/lv_area"
        style="@style/AutoMatch"
        android:background="@color/mainColor"
        android:divider="@color/transparent"
        android:dividerHeight="@dimen/dimen0"
        android:overScrollMode="never"
        android:paddingRight="@dimen/dimen20"
        android:scrollbars="none"
        tools:listitem="@layout/item_city" />

</LinearLayout>