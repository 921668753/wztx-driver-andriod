<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_models"
    style="@style/MatchMatch"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="@dimen/dimen100"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_back"
            style="@style/AutoMatch" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="@dimen/dimen50"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_ad"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen43" />

    <LinearLayout
        style="@style/Match44"
        android:layout_marginTop="@dimen/dimen8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_models"
            android:layout_width="@dimen/dimen0"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_conductor"
            android:layout_width="@dimen/dimen0"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_availableType"
            android:layout_width="@dimen/dimen0"
            android:layout_height="match_parent"
            android:layout_weight="1.3" />

    </LinearLayout>

    <LinearLayout
        style="@style/MatchMatch"
        android:background="@color/transparent_1"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen100">

        <ListView
            android:id="@+id/lv_models"
            style="@style/MatchWrap"
            android:background="@color/mainColor"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/dimen1"
            android:overScrollMode="never"
            android:paddingLeft="@dimen/dimen14"
            android:scrollbars="none"
            tools:listitem="@layout/item_models" />
    </LinearLayout>


</LinearLayout>