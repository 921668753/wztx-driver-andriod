<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen43"
        android:background="@color/mainColor"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_today"
            style="@style/WrapMatch"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen10"
            android:paddingRight="@dimen/dimen33"
            android:text="@string/today"
            android:textColor="@color/hintcolors"
            android:textSize="@dimen/textsize15" />

        <ImageView
            style="@style/WrapWrap"
            android:padding="@dimen/dimen15"
            android:src="@mipmap/ic_arrow_left" />

        <TextView
            style="@style/WrapMatch"
            android:gravity="center"
            android:text="2017-10-21"
            android:textColor="@color/hintcolors"
            android:textSize="@dimen/textsize15" />

        <ImageView
            style="@style/WrapWrap"
            android:padding="@dimen/dimen15"
            android:src="@mipmap/ic_arrow_right" />


        <ImageView
            android:id="@+id/img_calendar"
            style="@style/WrapWrap"
            android:paddingBottom="@dimen/dimen5"
            android:paddingLeft="@dimen/dimen35"
            android:paddingRight="@dimen/dimen15"
            android:paddingTop="@dimen/dimen5"
            android:src="@mipmap/ic_calendar" />


    </LinearLayout>


    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/mRefreshLayout"
        style="@style/MatchMatch"
        android:padding="@dimen/dimen10">

        <!--item_getorder.xml-->
        <ListView
            android:id="@+id/lv_mission"
            style="@style/MatchMatch"
            android:background="@color/background"
            android:divider="@color/background"
            android:dividerHeight="@dimen/dimen10"
            android:overScrollMode="never"
            android:scrollbars="none"
            tools:listitem="@layout/item_mission" />

    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>

    <include
        layout="@layout/common_error"
        android:visibility="gone" />

</LinearLayout>