<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:background="@color/mainColor"
    android:orientation="horizontal"
    android:paddingRight="@dimen/dimen15">

    <ImageView
        style="@style/WrapWrap"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/dimen15"
        android:paddingLeft="@dimen/dimen15"
        android:paddingTop="@dimen/dimen15"
        android:src="@mipmap/ic_checkbox_unselect" />

    <LinearLayout
        android:layout_width="@dimen/dimen0"
        android:layout_height="@dimen/dimen65"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen14">

        <LinearLayout
            style="@style/MatchAuto"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dimen15"
            android:paddingTop="@dimen/dimen12">

            <TextView
                style="@style/WrapWrap"
                android:singleLine="true"
                android:text="@string/orderUser"
                android:textColor="@color/hintcolors"
                android:textSize="@dimen/textsize14" />

            <TextView
                style="@style/WrapWrap"
                android:singleLine="true"
                android:text="张大伟"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize14" />


            <ImageView
                android:id="@+id/iv_tag"
                android:layout_width="@dimen/dimen6"
                android:layout_height="@dimen/dimen6"
                android:layout_marginLeft="@dimen/dimen5"
                android:layout_marginTop="@dimen/dimen2"
                android:background="@drawable/shape_dot" />

        </LinearLayout>

        <LinearLayout
            style="@style/MatchAuto"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dimen5">

            <TextView
                style="@style/WrapWrap"
                android:singleLine="true"
                android:text="@string/orderNumber2"
                android:textColor="@color/hintcolors"
                android:textSize="@dimen/textsize12" />


            <TextView
                style="@style/WrapWrap"
                android:singleLine="true"
                android:text="2017092301026"
                android:textColor="@color/hintcolors"
                android:textSize="@dimen/textsize12" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        style="@style/WrapMatch"
        android:gravity="right|center_vertical"
        android:text="2017-12-12"
        android:textColor="@color/hintcolors"
        android:textSize="@dimen/textsize12" />

</LinearLayout>