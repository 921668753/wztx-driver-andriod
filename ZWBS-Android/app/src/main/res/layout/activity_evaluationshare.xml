<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title"></include>

    <LinearLayout
        style="@style/Match44"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/deliveryTime"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <RatingBar
            android:id="@+id/rb_deliveryTime"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen41"
            android:numStars="5"
            android:stepSize="1" />
    </LinearLayout>

    <TextView style="@style/DividerWidth" />

    <LinearLayout
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/serviceAttitude"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <RatingBar
            android:id="@+id/rb_serviceAttitude"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen41"
            android:numStars="5"
            android:stepSize="1" />
    </LinearLayout>

    <TextView style="@style/DividerWidth" />

    <LinearLayout
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/satisfaction"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <RatingBar
            android:id="@+id/rb_satisfaction"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen54"
            android:numStars="5"
            android:stepSize="1" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_note"
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@color/mainColor"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:paddingBottom="@dimen/dimen10"
        android:paddingLeft="@dimen/dimen15"
        android:paddingRight="@dimen/dimen15"
        android:paddingTop="@dimen/dimen10"
        android:textSize="@dimen/textsize14" />

</LinearLayout>