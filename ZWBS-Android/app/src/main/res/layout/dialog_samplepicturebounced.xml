<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_samplePicture"
        style="@style/WrapWrap"
        android:src="@mipmap/pic_car_front" />

    <TextView
        android:id="@+id/tv_samplePicture"
        style="@style/WrapWrap"
        android:layout_marginTop="@dimen/dimen19"
        android:text="@string/licensePlatesClear"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/textsize15" />

    <ImageView
        android:id="@+id/img_del"
        android:layout_width="@dimen/dimen35"
        android:layout_height="@dimen/dimen35"
        android:layout_marginTop="@dimen/dimen25"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_del" />

</LinearLayout>