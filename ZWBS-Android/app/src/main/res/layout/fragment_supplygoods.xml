<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:background="@color/white">

        <LinearLayout
            style="@style/WrapMatch"
            android:layout_marginLeft="@dimen/dimen15"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/WrapMatch"
                android:gravity="center"
                android:text="苏州"
                android:textColor="@color/cityColors"
                android:textSize="@dimen/textsize16" />

            <ImageView
                style="@style/WrapWrap"
                android:layout_marginLeft="@dimen/dimen5"
                android:src="@mipmap/ic_category_gray" />

        </LinearLayout>


        <TextView
            style="@style/WrapWrap"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/supplygoods"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize18"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_setLine"
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/dimen5"
            android:paddingLeft="@dimen/dimen15"
            android:paddingRight="@dimen/dimen15"
            android:paddingTop="@dimen/dimen5"
            android:text="@string/setLine"
            android:textColor="@color/announcementCloseColors"
            android:textSize="@dimen/textsize15" />


    </RelativeLayout>


    <TextView style="@style/DividerWidth" />


    <LinearLayout
        style="@style/Match44"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_startingPoint"
            android:layout_width="@dimen/dimen0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_startingPoint"
                style="@style/WrapWrap"
                android:gravity="center"
                android:maxWidth="@dimen/dimen90"
                android:singleLine="true"
                android:text="@string/startingpoint"
                android:textColor="@color/typecolors"
                android:textSize="@dimen/textsize14" />

            <ImageView
                android:id="@+id/img_startingPoint"
                android:layout_width="@dimen/dimen6"
                android:layout_height="@dimen/dimen4"
                android:layout_marginLeft="@dimen/dimen5"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_category_gray_down" />

        </LinearLayout>

        <TextView
            style="@style/DividerHeight"
            android:layout_marginBottom="@dimen/dimen15"
            android:layout_marginTop="@dimen/dimen15" />

        <LinearLayout
            android:id="@+id/ll_endPoint"
            android:layout_width="@dimen/dimen0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_endPoint"
                style="@style/WrapWrap"
                android:gravity="center"
                android:maxWidth="@dimen/dimen90"
                android:singleLine="true"
                android:text="@string/endpoint"
                android:textColor="@color/typecolors"
                android:textSize="@dimen/textsize14" />

            <ImageView
                android:id="@+id/img_endPoint"
                android:layout_width="@dimen/dimen6"
                android:layout_height="@dimen/dimen4"
                android:layout_marginLeft="@dimen/dimen5"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_category_gray_down" />
        </LinearLayout>

        <TextView
            style="@style/DividerHeight"
            android:layout_marginBottom="@dimen/dimen15"
            android:layout_marginTop="@dimen/dimen15" />

        <LinearLayout
            android:id="@+id/ll_availableType"
            android:layout_width="@dimen/dimen0"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_availableType"
                style="@style/WrapWrap"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/availableType"
                android:textColor="@color/typecolors"
                android:textSize="@dimen/textsize14" />

            <ImageView
                android:id="@+id/img_availableType"
                android:layout_width="@dimen/dimen6"
                android:layout_height="@dimen/dimen4"
                android:layout_marginLeft="@dimen/dimen5"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_category_gray_down" />

        </LinearLayout>


        <TextView
            style="@style/DividerHeight"
            android:layout_marginBottom="@dimen/dimen15"
            android:layout_marginTop="@dimen/dimen15" />

        <LinearLayout
            android:id="@+id/ll_conductorModels"
            android:layout_width="@dimen/dimen0"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_conductorModels"
                style="@style/WrapWrap"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/conductorModels"
                android:textColor="@color/typecolors"
                android:textSize="@dimen/textsize14" />

            <ImageView
                android:id="@+id/img_conductorModels"
                android:layout_width="@dimen/dimen6"
                android:layout_height="@dimen/dimen4"
                android:layout_marginLeft="@dimen/dimen5"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_category_gray_down" />

        </LinearLayout>

    </LinearLayout>


    <TextView style="@style/DividerWidth" />

    <cn.bingoogolapple.refreshlayout.BGARefreshLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mRefreshLayout"
        style="@style/MatchMatch"
        android:background="@color/background"
        android:paddingLeft="@dimen/dimen10"
        android:paddingRight="@dimen/dimen10">

        <!-- item_order -->
        <ListView
            android:id="@+id/lv_order"
            style="@style/MatchMatch"
            android:layout_marginTop="@dimen/dimen10"
            android:divider="@color/background"
            android:dividerHeight="@dimen/dimen10"
            android:overScrollMode="never"
            android:scrollbars="none"
            tools:listitem="@layout/item_getorder" />

    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>

    <include layout="@layout/common_error" />

</LinearLayout>