<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:id="@+id/ll_aboutUs"
        style="@style/Match44"
        android:layout_marginTop="@dimen/dimen15"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/about_us"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <TextView style="@style/AutoMatch" />

        <ImageView
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/dimen15"
            android:gravity="right"
            android:src="@mipmap/ic_arrow" />

    </LinearLayout>

    <include layout="@layout/commom_dividerwidth1" />

    <LinearLayout
        android:id="@+id/ll_systemVersion"
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:gravity="center"
            android:text="@string/versionNumber"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <TextView
            android:id="@+id/tv_version"
            style="@style/AutoWrap"
            android:layout_marginRight="@dimen/dimen15"
            android:gravity="right"
            android:text="v1.0"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

    </LinearLayout>

    <include layout="@layout/commom_dividerwidth1" />

    <LinearLayout
        android:id="@+id/ll_changePassword"
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/changePassword"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <TextView style="@style/AutoMatch" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen15"
            android:gravity="right"
            android:src="@mipmap/ic_arrow" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_clearCache"
        style="@style/Match44"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/clearCache"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <TextView
            android:id="@+id/tv_cache"
            style="@style/AutoWrap"
            android:layout_marginRight="@dimen/dimen15"
            android:gravity="right"
            android:text="10M"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />
    </LinearLayout>

    <TextView
        style="@style/DividerWidth"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_logOut"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40"
        android:layout_marginLeft="@dimen/dimen15"
        android:layout_marginRight="@dimen/dimen15"
        android:layout_marginTop="@dimen/dimen32"
        android:background="@drawable/shape_sendquotation"
        android:gravity="center"
        android:text="@string/logOut"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/textsize12"
        android:visibility="gone" />


</LinearLayout>