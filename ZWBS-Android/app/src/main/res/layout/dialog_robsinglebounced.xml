<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/transparent_1">

    <LinearLayout
        android:layout_width="@dimen/dimen300"
        android:layout_height="@dimen/dimen310"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_getorder"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cancel"
            style="@style/WrapWrap"
            android:layout_gravity="right"
            android:padding="@dimen/dimen5"
            android:src="@mipmap/close" />

        <LinearLayout
            style="@style/MatchWrap"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen10"
            android:paddingRight="@dimen/dimen10">


            <LinearLayout
                style="@style/WrapWrap"
                android:orientation="vertical">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/origin"
                    android:textColor="@color/hintcolors"
                    android:textSize="@dimen/textsize12" />

                <TextView
                    android:id="@+id/tv_origin"
                    style="@style/WrapWrap"
                    android:maxLength="7"
                    android:singleLine="true"
                    android:text="苏州昆山苏州昆山"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize15" />
            </LinearLayout>

            <ImageView
                style="@style/WrapWrap"
                android:layout_marginLeft="@dimen/dimen7"
                android:layout_marginRight="@dimen/dimen7"
                android:src="@mipmap/horizontalarrows" />

            <LinearLayout
                style="@style/WrapWrap"
                android:orientation="vertical">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/destination"
                    android:textColor="@color/hintcolors"
                    android:textSize="@dimen/textsize12" />

                <TextView
                    android:id="@+id/tv_destination"
                    style="@style/WrapWrap"
                    android:maxLength="7"
                    android:singleLine="true"
                    android:text="上海浦东上海浦东"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textsize15" />
            </LinearLayout>


        </LinearLayout>


        <TextView
            style="@style/DividerWidth"
            android:layout_marginBottom="@dimen/dimen10"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:layout_marginTop="@dimen/dimen10" />

        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen15"
            android:paddingRight="@dimen/dimen15">

            <TextView
                style="@style/WrapWrap"
                android:text="@string/descriptionGoods"
                android:textColor="@color/hintcolors"
                android:textSize="@dimen/textsize12" />

            <TextView
                android:id="@+id/tv_descriptionGoods"
                style="@style/WrapWrap"
                android:layout_marginLeft="@dimen/dimen25"
                android:singleLine="true"
                android:text="水果"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize12" />
        </LinearLayout>

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/dimen8"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen15"
            android:paddingRight="@dimen/dimen15">

            <TextView
                style="@style/WrapWrap"
                android:text="@string/weight"
                android:textColor="@color/hintcolors"
                android:textSize="@dimen/textsize12" />

            <TextView
                android:id="@+id/tv_weight"
                style="@style/WrapWrap"
                android:layout_marginLeft="@dimen/dimen50"
                android:singleLine="true"
                android:text="水果"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize12" />
        </LinearLayout>

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/dimen8"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen15"
            android:paddingRight="@dimen/dimen15">

            <TextView
                style="@style/WrapWrap"
                android:text="@string/transportTime"
                android:textColor="@color/hintcolors"
                android:textSize="@dimen/textsize12" />

            <TextView
                android:id="@+id/tv_transportTime"
                style="@style/WrapWrap"
                android:layout_marginLeft="@dimen/dimen25"
                android:singleLine="true"
                android:text="水果"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize12" />
        </LinearLayout>

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/dimen8"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen15"
            android:paddingRight="@dimen/dimen15">

            <TextView
                style="@style/WrapWrap"
                android:text="@string/systemOffer"
                android:textColor="@color/hintcolors"
                android:textSize="@dimen/textsize12" />

            <TextView
                android:id="@+id/tv_systemOffer"
                style="@style/WrapWrap"
                android:layout_marginLeft="@dimen/dimen25"
                android:singleLine="true"
                android:text="300.00元"
                android:textColor="@color/lonincolors"
                android:textSize="@dimen/textsize12" />
        </LinearLayout>

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/dimen8"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen15"
            android:paddingRight="@dimen/dimen15">

            <TextView
                style="@style/WrapWrap"
                android:text="@string/shipperOffer"
                android:textColor="@color/hintcolors"
                android:textSize="@dimen/textsize12" />

            <TextView
                android:id="@+id/tv_shipperOffer"
                style="@style/WrapWrap"
                android:layout_marginLeft="@dimen/dimen25"
                android:singleLine="true"
                android:text="300.00元"
                android:textColor="@color/lonincolors"
                android:textSize="@dimen/textsize12" />
        </LinearLayout>

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/dimen8"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen15"
            android:paddingRight="@dimen/dimen15">

            <TextView
                style="@style/WrapWrap"
                android:text="@string/driverQuotation"
                android:textColor="@color/hintcolors"
                android:textSize="@dimen/textsize12" />

            <EditText
                android:id="@+id/et_money"
                style="@style/AutoWrap"
                android:layout_marginLeft="@dimen/dimen25"
                android:background="@drawable/shape_code1"
                android:hint="@string/hintDriverBid"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:padding="@dimen/dimen5"
                android:textColor="@color/textColor"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="@dimen/textsize12" />

            <TextView
                style="@style/WrapWrap"
                android:layout_marginLeft="@dimen/dimen15"
                android:layout_marginRight="@dimen/dimen30"
                android:text="@string/yuan"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize12" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:layout_marginTop="@dimen/dimen13"
            android:background="@color/lonincolors"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen10"
            android:paddingTop="@dimen/dimen10"
            android:text="@string/getorder"
            android:textColor="@color/mainColor"
            android:textSize="@dimen/textsize15" />
    </LinearLayout>


</RelativeLayout>