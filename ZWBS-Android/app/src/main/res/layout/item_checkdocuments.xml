<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        style="@style/MatchWrap"
        android:paddingBottom="@dimen/dimen5"
        android:paddingLeft="@dimen/dimen15"
        android:paddingRight="@dimen/dimen15"
        android:paddingTop="@dimen/dimen5"
        android:singleLine="true"
        android:text="明智"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textsize15" />

    <include layout="@layout/commom_dividerwidth"></include>

    <LinearLayout
        android:id="@+id/ll_startDate"
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/startDate"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <TextView
            android:id="@+id/tv_startDate"
            style="@style/AutoWrap"
            android:layout_marginLeft="@dimen/dimen20"
            android:layout_marginRight="@dimen/dimen15"
            android:background="@android:color/transparent"
            android:hint="@string/pleaseSelect"
            android:singleLine="true"
            android:textColorHint="@color/hintcolors"
            android:textSize="@dimen/textsize15" />

        <ImageView
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/dimen15"
            android:src="@mipmap/arrow" />
    </LinearLayout>

    <include layout="@layout/commom_dividerwidth"></include>

    <LinearLayout
        android:id="@+id/ll_asOfTheDate"
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/asOfTheDate"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <TextView
            android:id="@+id/tv_asOfTheDate"
            style="@style/AutoWrap"
            android:layout_marginLeft="@dimen/dimen20"
            android:layout_marginRight="@dimen/dimen15"
            android:background="@android:color/transparent"
            android:hint="@string/pleaseSelect"
            android:singleLine="true"
            android:textColorHint="@color/hintcolors"
            android:textSize="@dimen/textsize15" />

        <ImageView
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/dimen15"
            android:src="@mipmap/arrow" />
    </LinearLayout>

    <include layout="@layout/commom_dividerwidth"></include>

    <ImageView
        android:id="@+id/iv_certificate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen180"
        android:background="@color/mainColor"
        android:paddingBottom="@dimen/dimen20"
        android:paddingLeft="@dimen/dimen40"
        android:paddingRight="@dimen/dimen40"
        android:paddingTop="@dimen/dimen20"
        android:scaleType="fitXY"
        android:src="@mipmap/driverlicense" />

</LinearLayout>