<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title"></include>

    <LinearLayout
        android:id="@+id/ll_upload"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dimen15"
            android:text="@string/headPortrait"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <TextView style="@style/AutoMatch" />

        <cn.bingoogolapple.imageview.BGAImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_user"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/avatar_default"
            app:bga_iv_isCircle="true" />

        <ImageViewBU
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/dimen15"
            android:src="@mipmap/arrow" />
    </LinearLayout>

    <TextView style="@style/DividerWidth" />

    <LinearLayout
        android:id="@+id/ll_userName"
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:paddingLeft="@dimen/dimen15"
            android:text="@string/userName"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/MatchWrap"
            android:gravity="right"
            android:paddingRight="@dimen/dimen15"
            android:text="--"
            android:textColor="@color/typecolors"
            android:textSize="@dimen/textsize15" />
    </LinearLayout>

    <TextView style="@style/DividerWidth" />

    <LinearLayout
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/WrapWrap"
            android:paddingLeft="@dimen/dimen15"
            android:text="@string/userPhone"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/MatchWrap"
            android:gravity="right"
            android:paddingRight="@dimen/dimen15"
            android:text="11111111"
            android:textColor="@color/typecolors"
            android:textSize="@dimen/textsize15" />
    </LinearLayout>

    <TextView
        style="@style/DividerWidth"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_accountDeposit"
        style="@style/Match44"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            style="@style/WrapWrap"
            android:paddingLeft="@dimen/dimen15"
            android:text="@string/accountDeposit"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize15" />

        <TextView
            android:id="@+id/tv_accountDeposit"
            style="@style/MatchWrap"
            android:gravity="right"
            android:paddingRight="@dimen/dimen15"
            android:text="今天好心情"
            android:textSize="@dimen/mian_font_size" />
    </LinearLayout>

    <TextView style="@style/DividerWidth" />

